{
    "collection": "recipes",
    "database": "react-meals",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "owner": "%%user.id"
            },
            "fields": {
                "_id": {},
                "recipe": {}
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "non-owner",
            "apply_when": {},
            "fields": {
                "_id": {},
                "recipe": {}
            },
            "read": true,
            "write": false,
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        }
    ]
}
